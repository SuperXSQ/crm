<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.xsq.crm.workbench.dao.ActivityRemarkDao">

	<select id="getRemarkListByAid" resultType="ActivityRemark">

		select * from tbl_activity_remark where activityId = #{activityId} order by createTime asc

	</select>


	<select id="getCountByAid" resultType="int">

		select count(*) from tbl_activity_remark where activityId in

		<foreach collection="array" item="aid" open="(" separator="," close=")">
			#{aid}
		</foreach>

	</select>


	<delete id="deleteByAid" >

		delete from tbl_activity_remark where activityId in

		<foreach collection="array" item="aid" open="(" separator="," close=")">
			#{aid}
		</foreach>

    </delete>

</mapper>
























